@{
    Layout = "~/Views/Shared/_BotanifyLayout.cshtml";
}

<div class="row text-black">
    <div class="col-xs-1"></div>
    <div class="col-xs-10 section-shop">
        <div class="header">
            <h2>Shop All Plants</h2>
                <select ng-model="sortOption" ng-change="sortProducts()">
                    <option value="0">Sort By:</option>
                    <option value="1">Name: A-Z</option>
                    <option value="2">Name: Z-A</option>
                    <option value="3">Price: High-Low</option>
                    <option value="4">Price: Low-High</option>
                </select>
        </div>

        <div class="row shop-main">
            <div class="col-xs-2 shop-filter" ng-init="loadFilterFunc()">
                <div class="filter-by text-sm">
                    <h6 class="text-lg font-medium">Filter by Size</h6>
                    <ul>
                        <li ng-repeat="size in sizes" >
                            <div class="form-checkbox">
                                <input class="checkbox" type="checkbox" id="size{{ $index }}" ng-model="size.selected" />
                                <label for="size{{ $index }}" tabindex="1">{{ size.size }}</label>
                            </div>
                        </li>
                    </ul>
                </div>

                <div class="filter-by text-sm">
                    <h6 class="text-lg font-medium">Filter by Category</h6>
                    <ul>
                        <li  ng-repeat="category in categories">
                            <div class="form-checkbox">
                                <input class="checkbox" type="checkbox" id="category{{ $index }}" ng-model="category.selected" />
                                <label for="category{{ $index }}" tabindex="1">{{ category.categoryName }}</label>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>


            <div class="col-xs-10 shop-products text-black">
                <div class="card-container" ng-init="loadProductFunc()">
                    <div class="card-product" ng-repeat="product in productsData">
                        <div class="product-img">
                            <img ng-src="{{product.productImage}}" alt="{{product.productName}}" ng-click="loadItemFunc(product.productId)"/>
                        </div>
                        <div class="product-details">
                            <div class="product-name font-medium">{{product.productName}}</div>
                            <div class="product-btn">
                                <h3>{{product.productPrice | currency : '₱'}}</h3>
                                <button class="btn-icon bg-primary text-white" ng-click="addToCart(product)">
                                    <i class='bx bx-basket'></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-1">
    </div>
</div>

