@{
    Layout = "~/Views/Shared/_BotanifyLayout.cshtml";
}


<div class="row section-cart text-black">
    <div class="col-xs-1"></div>
    <div class="col-xs-10 cart-main">
        <div class="header">
            <h2>Your Cart</h2>
            <a href="@Url.Action("ShopPage", "Home")">Continue Shopping</a>
        </div>
        <div class="cart-table">

            <div class="cart-item">
                <div class="item-details">
                    <img src="/Content/assets/plants/australfern_800x.png" alt="Austral Gem Fern">
                    <p class="font-semibold">Austral Gem Fern</p>
                </div>
                <div class="item-buttons">
                    <div class="quantity">
                        <button class="minus" ng-click="decreaseQuantity()" aria-label="Decrease">&minus;</button>
                        <input type="number" class="input-box" ng-model="quantity" min="1" max="10" />
                        <button class="plus" ng-click="increaseQuantity()" aria-label="Increase">&plus;</button>
                    </div>
                        <button class="btn-icon">
                            <i class='bx bx-trash'></i>
                        </button>
                </div>
                <div class="item-price">
                    <p class="text-xl font-medium">₱500</p>
                </div>
            </div>

            <div class="table-checkout">
                <div class="checkout-wrapper">
                    <div class="checkout-details text-xl font-semibold">
                        <p>Subtotal</p>
                        <p>test</p>
                    </div>
                    <button class="btn btn-accent btn-rounded btn-block">Checkout</button>
                </div>
            </div>


        </div>
    </div>
    <div class="col-xs-1"></div>
</div>

