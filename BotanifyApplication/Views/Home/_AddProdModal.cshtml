
<div class="modal-overlay" ng-class="{'active': isAddVisible}" ng-show="showForm">
    <div class="modal text-black bg-white">
        <div class="header-row">
            <h3>Add Product</h3>
            <button class="btn-icon" ng-click="addProduct()">
                <i class='bx bx-x-circle'></i>
            </button>
        </div>

        <form action="@Url.Action("DashProducts", "Home")" method="post" class="form-address text-sm" ng-submit="addProductFunc($event)">
            <div class="field-row-half">
                <div class="field-input">
                    <label>Product Size</label>
                    <select ng-model="sizeId">
                        <option value="1">Small</option>
                        <option value="2">Medium</option>
                        <option value="3">Large</option>
                        <option value="4">Hanging</option>
                    </select>
                    <small class="error-message" ng-show="sizeIdError">Please select a valid size.</small>
                </div>
                <div class="field-input">
                    <label>SKU</label>
                    <input type="text" ng-model="sku" />
                    <small class="error-message" ng-show="skuError">Invalid SKU.</small>
                </div>
            </div>
            <div class="field-row-half">
                <div class="field-input">
                    <label>Product Name</label>
                    <input type="text" ng-model="productName" />
                    <small class="error-message" ng-show="productNameError">Invalid Product Name.</small>
                </div>
                <div class="field-input">
                    <label>Scientific Name</label>
                    <input type="text" ng-model="productSciName" />
                    <small class="error-message" ng-show="productSciNameError">Invalid Scientific Name.</small>
                </div>
            </div>
            <div class="field-row-half">
                <div class="field-input">
                    <label>Product Description</label>
                    <textarea ng-model="productDescription"></textarea>
                    <small class="error-message" ng-show="productDescriptionError">Invalid Product Description.</small>
                </div>
                <div class="field-input">
                    <label>Product Tips</label>
                    <textarea ng-model="productTips"></textarea>
                    <small class="error-message" ng-show="productTipsError">Invalid Product Tips.</small>
                </div>
            </div>
            <div class="field-row-half">
                <div class="field-input">
                    <label>Image Path</label>
                    <input type="text" class="field-block" ng-model="productImage" />
                    <small class="error-message" ng-show="productImageError">Invalid Image Path.</small>
                </div>
                <div class="field-input">
                    <label>Product Category</label>
                    <select ng-model="categoryId">
                        <option value="1">Pet-Friendly</option>
                        <option value="2">Air Purifiers</option>
                        <option value="3">For Beginners</option>
                        <option value="4">Low Light</option>
                    </select>
                    <small class="error-message" ng-show="categoryIdError">Please select a valid category.</small>
                </div>
            </div>
            <div class="field-row-half">
                <div class="field-input">
                    <label>Product Price</label>
                    <input type="text" ng-model="productPrice" />
                    <small class="error-message" ng-show="productPriceError">Invalid Price.</small>
                </div>
                <div class="field-input">
                    <label>Product Stock</label>
                    <input type="text" ng-model="productStock" />
                    <small class="error-message" ng-show="productStockError">Invalid Stock.</small>
                </div>
            </div>
            <button type="submit" class="btn btn-primary text-sm" ng-click="addProductFunc()">Add Product</button>
        </form>
    </div>
</div>