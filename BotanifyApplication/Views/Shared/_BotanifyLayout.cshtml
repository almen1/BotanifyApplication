<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/scss/main.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>

<body ng-app="BotanifyApplication" ng-controller="BotanifyApplicationController" class="font-euclid bg-white">

    <div class="navbar row bg-white">
        <div class="col-xs-1">
        </div>
        <div class="nav-items col-xs-10">
            <div class="section-logos">
                <img src="~/Content/assets/logo.svg" alt="Alternate Text" />
            </div>
            <div class="section-links">
                <a href="#">Home</a>
                <a href="#">Shop</a>
                <a href="#">Contact Us</a>
            </div>
            <div class="section-btns text-black">
                <button class="btn-icon">
                    <i class='bx bx-basket'></i>
                </button>
                <button class="btn-icon">
                    <i class='bx bx-user'></i>
                </button>
            </div>
        </div>
        <div class="col-xs-1">
        </div>
    </div>

    <div>
        @RenderBody()
    </div>

    <div class="card-footer row bg-primary text-white">
        <div class="col-xs-1"></div>
        <div class="col-xs-10 footer-items">
            <div class="section-socmed">
                <p class="text-lg font-medium">
                    Stay Rooted
                </p>
                <div class="socmed-icons">
                    <i class='bx bxl-facebook text-2xl'></i>
                    <i class='bx bxl-instagram text-2xl'></i>
                    <i class='bx bxl-tiktok text-2xl'></i>
                </div>
            </div>
            <div class="section-contact">
                <p class="text-lg font-medium">
                    Get in Touch
                </p>
                <div class="contact-content">
                    <i class='bx bxs-phone text-lg'></i>
                    <p class="text-sm font-light">
                        +63 917 987 6543
                    </p>
                </div>
                <div class="contact-content">
                    <i class='bx bxs-envelope text-lg'></i>
                    <p class="text-sm font-light">
                        contact@botanify.ph
                    </p>
                </div>
            </div>
            <div class="section-email">
                <p class="text-lg font-medium">
                    Fresh Updates from Us
                </p>
                <p class="text-sm font-light">
                    Subscribe for plant tips, updates, and all things Botanify.
                </p>
                <div class="newsletter">
                    <input type="text" name="name" value="" placeholder="Email address" />
                    <button class="btn btn-icon bg-accent">
                        <i class='bx bx-chevron-right text-2xl'></i>
                    </button>
                </div>
            </div>
            <div class="section-text">
                <p class="text-lg font-medium">
                    Leaf it to Us
                </p>
                <p class="text-sm font-light">
                    We started Botanify to share our love for plants with our friends, and we’d love to have you in our green circle. Let’s grow and spread the leafy goodness together!
                </p>
            </div>
        </div>
        <div class="col-xs-1"></div>
    </div>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/AngularScripts/Module.js"></script>
    <script src="~/Scripts/AngularScripts/Service.js"></script>
    <script src="~/Scripts/AngularScripts/Controller.js"></script>

</body>
</html>
